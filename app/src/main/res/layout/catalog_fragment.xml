<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true"
        >

    <include layout="@layout/small_toolbar"
            android:id="@+id/catalog_toolbar"
            />

    <TextView
            android:id="@+id/catalog_error"
            android:text="@string/novelty_error_no_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/catalog_retry"
            android:text="@string/refresh"
            android:visibility="gone"
            />

    <androidx.recyclerview.widget.RecyclerView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/catalog_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listItem="@layout/novelty"
            />

</FrameLayout>